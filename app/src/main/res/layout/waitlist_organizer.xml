<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#16181F"
    android:padding="16dp">

    <!-- Back Button -->
    <ImageButton
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/back_button"
        android:contentDescription="@string/back"
        android:background="@null"
        android:layout_margin="16dp"/>

    <!-- Entrant / Organizer Toggle -->
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <RadioButton
            android:id="@+id/entrantButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:text="Entrant"
            android:textColor="@android:color/white" />

        <RadioButton
            android:id="@+id/organizerButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:text="Organizer"
            android:background="@android:drawable/ic_notification_overlay"
            android:textColor="@android:color/white" />
    </RadioGroup>

    <!-- Events GridLayout for Organizer -->
    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        android:columnCount="2"
        android:rowCount="3"
        android:paddingBottom="24dp">

        <!-- Event Boxes for Organizer -->
        <LinearLayout
            android:id="@+id/event_box_1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:background="#20232D"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/event_title_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sample Event #1"
                android:textColor="#FFFFFF"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/event_box_2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:background="#20232D"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/event_title_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sample Event #2"
                android:textColor="#FFFFFF"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/event_box_3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:background="#20232D"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/event_title_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sample Event #3"
                android:textColor="#FFFFFF"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/event_box_4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:background="#20232D"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/event_title_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sample Event #4"
                android:textColor="#FFFFFF"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/event_box_5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:background="#20232D"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/event_title_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sample Event #5"
                android:textColor="#FFFFFF"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/event_box_6"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:background="#20232D"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/event_title_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sample Event #6"
                android:textColor="#FFFFFF"
                android:textStyle="bold"/>
        </LinearLayout>
    </GridLayout>
</LinearLayout>
